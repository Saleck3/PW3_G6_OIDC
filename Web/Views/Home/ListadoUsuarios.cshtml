@using Web.Entidades
@model List<UsuarioTemplate>

@{
    ViewData["Title"] = "ListadoUsuarios";
}

<h1>Listado Usuarios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre de usuario
            </th>
            <th>
                Rol
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>
                      @usuario.Id
                    </td>
                    <td>
                      @usuario.Username
                    </td>
                    <td>
                        @usuario.Rol
                       
                    </td>
                    <td>
                        <a class="btn btn-danger" href="/home/eliminar/@usuario.Id">Eliminar</a>
                        <a class="btn btn-success" href="/home/editar/@usuario.Id">Editar</a>
                    </td>
                </tr>
            }
        
        }else{
             <tr>
                 <td><h5>No hay resultados de usuarios.</h5></td>
            </tr>
        }
        
    </tbody>
</table>
