@using Web.Entidades
@model List<UsuarioTemplate>

@{
    ViewData["Title"] = "ListadoUsuarios";
}

<h1>Listado Usuarios</h1>
<hr />

@if (TempData.Peek("OkMsg") != null)
{
    <span class="text-success">@TempData["OkMsg"]</span>
}
@if (TempData.Peek("error") != null)
{
    <span class="text-danger">@TempData["error"]</span>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre de usuario
            </th>
            <th>
                Rol
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>
                        @usuario.Id
                    </td>
                    <td>
                        @usuario.Username
                    </td>
                    <td>
                        @usuario.Rol
                    </td>
                    <td>
                        <a class="btn btn-success" href="/home/Editar/@usuario.Id">Editar</a>
                        <a class="btn btn-danger" href="/home/Eliminar/@usuario.Id">Eliminar</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td><h5>No hay resultados de usuarios.</h5></td>
            </tr>
        }

    </tbody>
</table>
